{
    "name": "algoritma/shopware-test-utils",
    "description": "A collection of helpers for Shopware 6 integration/functional tests.",
    "type": "library",
    "authors": [
        {
            "name": "Algoritma srl",
            "email": "info@algoritma.it"
        }
    ],
    "require": {
        "php": ">=8.2",
        "shopware/core": "~6.6.10|^6.7",
        "fakerphp/faker": "^1.24",
        "symfony/finder": "^7.0|^8.0",
        "symfony/process": "^7.0|^8.0",
        "ext-pdo": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Algoritma\\ShopwareTestUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Algoritma\\ShopwareTestUtils\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "store.shopware.com/swagcommercial": "Enables the B2B extension for functional tests."
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "symfony/runtime": true,
            "phpstan/extension-installer": true,
            "algoritma/php-coding-standards": true,
            "algoritma/castor-recipes": true,
            "algoritma/shopware-test-utils": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "algoritma/php-coding-standards": "^3.0",
        "frosh/shopware-rector": "^0.5.8",
        "symfony/browser-kit": "^7.0|^8.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "algoritma/castor-recipes": "dev-main"
    },
    "bin": ["bin/generate-factory-stubs"],
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --diff",
        "rector-check": "rector process --dry-run",
        "rector-fix": "rector process",
        "phpstan": "phpstan analyze --memory-limit=-1",
        "phpunit": "phpunit -c phpunit.xml",
        "qa": [
            "@phpstan",
            "@cs-check",
            "@rector-check",
            "@phpunit"
        ],
        "pre-commit": "@qa",
        "generate-stubs": "bin/generate-factory-stubs"
    }
}
